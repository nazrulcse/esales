<div class="j-menu-container"></div>

<div class="b-inner-page-header f-inner-page-header b-bg-header-inner-page">
  <div class="b-inner-page-header__content">
    <div class="container">
      <h1 class="f-primary-l c-default"> <%= t(:my_account) %> </h1>

      <div class="f-primary-l f-inner-page-header_title-add c-senary"> <%= t(:my_account_sub_title) %> </div>
    </div>
  </div>
</div>
<div class="l-main-container">

  <div class="b-breadcrumbs f-breadcrumbs">
    <div class="container">
      <ul>
        <li><a href="#"><i class="fa fa-home"></i><%= t(:home) %></a></li>
        <li><i class="fa fa-angle-right"></i><span><%= t(:my_account) %></span></li>
      </ul>
    </div>
  </div>
  <section class="b-infoblock">
    <div class="container reset-padding">
      <div>
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#all"><%= t(:my_sales) %></a></li>
          <li><a data-toggle="tab" href="#earning"><%= t(:my_earning) %></a></li>
          <li><a data-toggle="tab" href="#pending"><%= t(:pending_earning) %></a></li>
          <li><a data-toggle="tab" href="#transaction"><%= t(:transaction) %></a></li>
        </ul>

        <div class="tab-content">
          <div id="all" class="tab-pane fade in active">
            <div class="rowx">
              <div class="table-responsive">
                <table class="table table-striped table-condensed">
                      <% @orders.each do |order| %>
                          <% if order.line_items.present? %>
                              <%= render 'orders/order_item', :order => order %>
                          <% end %>
                      <% end %>
                </table>
              </div>
            </div>
          </div>
          <div id="earning" class="tab-pane fade">
            <div class="rowx">
              <div class="table-responsive">
                    <%= render 'my_earning', :earnings => @earnings %>
              </div>
            </div>
          </div>
          <div id="pending" class="tab-pane fade">
            <div class="rowx">
              <div class="table-responsive">
                <table class="table table-striped table-condensed">
                      <% @pending.each do |order| %>
                          <% if order.line_items.present? %>
                              <%= render 'pending_earning', :order => order %>
                          <% end %>
                      <% end %>
                </table>
              </div>
            </div>
          </div>
          <div id="transaction" class="tab-pane fade">
            <div class="rowx">
              <%= render 'transaction_list' %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>
</div>