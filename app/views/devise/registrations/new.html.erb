
<%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
  <%= devise_error_messages! %>
    <div class="signup-form">
      <% if params[:user_type] == 'regular' %>
          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :name %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :name, autofocus: true,class: "form-control" %>
            </div>
          </div>

          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :email %>
            </div>
            <div class="col-md-9">
              <%= f.email_field :email, autofocus: true ,class: "form-control"%>
            </div>
          </div>

          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :image %>

            </div>
            <div class="col-md-9">
              <%= f.file_field :image ,class: "form-control"%>
            </div>
          </div>

          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            </div>
            <div class="col-md-9">
              <%= f.password_field :password, autocomplete: "off",class: "form-control" %>
            </div>
          </div>

          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :password_confirmation %>
            </div>
            <div class="col-md-9">
              <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control" %>
            </div>
          </div>
      <%else%>
          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :name %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :name, autofocus: true,class: "form-control" %>
            </div>
          </div>

          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :email %>
            </div>
            <div class="col-md-9">
              <%= f.email_field :email, autofocus: true ,class: "form-control"%>
            </div>
          </div>

          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :image %>

            </div>
            <div class="col-md-9">
              <%= f.file_field :image ,class: "form-control"%>
            </div>
          </div>

          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            </div>
            <div class="col-md-9">
              <%= f.password_field :password, autocomplete: "off",class: "form-control" %>
            </div>
          </div>

          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :password_confirmation %>
            </div>
            <div class="col-md-9">
              <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control" %>
            </div>
          </div>

          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :father_name, "Father's Name" %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :father_name,class: "form-control" %>
            </div>
          </div>

          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :mother_name, "Mother's Name" %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :mother_name,class: "form-control" %>
            </div>
          </div>

          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :date_of_birth  %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :date_of_birth,class: "form-control datepicker" %>
            </div>
          </div>

          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :permanent_address  %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :permanent_address,class: "form-control" %>
            </div>
          </div>

          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :present_address  %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :present_address,class: "form-control" %>
            </div>
          </div>

          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :voter_id  %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :voter_id,class: "form-control" %>
            </div>
          </div>

          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :mobile  %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :mobile,class: "form-control" %>
            </div>
          </div>

          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :identifier_name  %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :identifier_name,class: "form-control" %>
            </div>
          </div>

          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :identifier_mobile  %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :identifier_mobile,class: "form-control" %>
            </div>
          </div>

          <div class = "form-group row col-md-12">
            <div class="col-md-3">
              <%= f.label :identifier_address  %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :identifier_address,class: "form-control" %>
            </div>
          </div>
          <div style="clear: both"></div>
          <div class = "form-group row col-md-12">
            <div class="col-md-3">
            </div>
            <div class="col-md-9">
              <div class="col-md-1">
                <%= check_box_tag :agree %>
              </div>
              <div class="col-md-11">
                <%= t " I'm certify that all the information and news are given above is  accurate,
              and I became aware about of the company's  all rules to be applied for sale."  %>
              </div>
            </div>
          </div>
      <%end%>
      <div style="clear: both"></div>
      <div class = "form-group row col-md-12">
        <div class="col-md-3">
          <div class = "form-group row col-md-12">
            <%= f.hidden_field :user_type,value: params[:user_type] %>
          </div>
        </div>
        <div class="col-md-9">
          <%= f.submit "Sign up", class: 'btn btn-default  pull-right' %>
        </div>
      </div>
      <div style="clear: both"></div>
    </div>
<% end %>

<script>
    $(function () {
        $('.datepicker').datepicker();
    })

</script>
