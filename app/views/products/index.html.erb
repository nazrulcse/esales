  <section class="b-infoblock b-diagonal-line-bg-light">
    <div class="container">
      <div class="row b-col-default-indent">
        <% @top_products.each do |product| %>
            <div class="col-md-6">
              <div class="b-news-item b-news-item--medium-size f-news-item">
                <div class="b-news-item__img view view-sixth">
                  <%if product.product_images.present? %>
                      <%= image_tag(product.product_images.first.image.url(:big))  %>
                  <% end %>

                  <div class="b-item-hover-action f-center mask">
                    <div class="b-item-hover-action__inner">
                      <div class="b-item-hover-action__inner-btn_group">
                        <%= generate_favorate_link(product.id) %>
                        <a href="<%= line_items_path(:product_id => product.id)%>" class="b-btn f-btn b-btn-light f-btn-light info"data-method="post" data-remote="true"><i class="fa fa-shopping-cart"></i></a>
                        <a href="<%=  product_path(product) %>" class="b-btn f-btn b-btn-light f-btn-light info"><i class="fa fa-link"></i></a>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="b-news-item__info">
                  <div class="f-news-item__info_category f-uppercase"><%= product.category.name %></div>
                  <a href="<%=  product_path(product) %>" class="b-news-item__info_title-big f-news-item__info_title-big f-primary-b">Morphy Richards</a>
                  <div class="b-news-item__info_text f-news-item__info_text">
                    <%= product.description %>
                  </div>
                  <div class="b-news-item__article">
                    <span class="f-news-item__price f-primary-b b-left">$ <%= product.price %></span>
                    <%= link_to line_items_path(:product_id => product.id), :method => :post, :remote => true,:class => "b-btn f-btn b-right b-btn-sm-md f-btn-sm-md f-primary-b" do %>
                        <i class="fa fa-shopping-cart"></i> Add to Cart
                    <% end %>
                  </div>
                </div>
                <div class="b-action-info f-primary-b">
                  <div class="b-action-info_text f-action-info_text">sale</div>
                </div>
              </div>
            </div>
        <%end%>
