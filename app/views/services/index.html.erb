<div class="j-menu-container"></div>
<div class="top-header-bg">
  <div class="container public_bg_image">
    <div class="b-inner-page-header f-inner-page-header">
      <div class="b-inner-page-header__content">
        <h1 class="f-primary-l c-default"><%= t(:services) %></h1>
        <div class="f-primary-l f-inner-page-header_title-add c-senary"><%= t(:service_sub_title) %>
        </div>
      </div>
    </div>
    <hr class="hr-line">
  </div>
</div>
<div class="l-main-container">
  <section class="b-infoblock">
    <div class="container public_bg_image">
      <div class="row">
        <%= render 'shared/filter' ,product_type: 'service' %>
        <div class="col-md-9 ">
          <div class="row">
            <div class="b-col-default-indent service_items">
              <% @services.each do |service| %>
                  <%= render 'item', service: service %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<script type="text/javascript">
    $(function() {
        $(window).scroll(function() {
            if($(window).scrollTop() == $(document).height() - $(window).height()) {
                $.ajax({
                    url: "<%= more_services_path(params: params) %>",
                    type: 'get',
                    dataType: 'script',
                    data: {offset: $('.service_items .single_service').length},
                    error: function() {
                        alert("Something wrong");
                    }
                });
            }
        });
    })
</script>
