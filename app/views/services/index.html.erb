<div class="j-menu-container"></div>
<div class="l-main-container">
  <section class="b-infoblock">
    <div class="container public_bg_image">
      <div class="row">
        <div class="col-md-9 ">
          <div class="row">
            <div class="b-col-default-indent service_items">
              <% @services.each do |service| %>
                  <%= render 'item', service: service %>
              <% end %>
              <div class="clearfix hidden-xs"></div>
            </div>
          </div>
        </div>
        <%= render 'shared/filter' ,product_type: 'service' %>
      </div>
    </div>
  </section>
</div>


<script type="text/javascript">
    $(function() {
        $(window).scroll(function() {
            if($(window).scrollTop() == $(document).height() - $(window).height()) {
                $.ajax({
                    url: "<%= more_services_path(params: params) %>",
                    type: 'get',
                    dataType: 'script',
                    data: {offset: $('.service_items .single_service').length},
                    error: function() {
                        alert("Something wrong");
                    }
                });
            }
        });
    })
</script>
