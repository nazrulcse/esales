<div class="j-menu-container"></div>
<div class="l-main-container">
  <section class="b-infoblock">
    <div class="container">
      <div class="row">
        <div class="col-md-9 ">
          <div class="row">
            <div class="b-col-default-indent">
              <% @services.each do |service| %>
                  <div class="col-md-4 col-sm-4 col-xs-6 col-mini-12">
                    <div class="b-product-preview">
                      <div class="b-product-preview__img view view-sixth">
                        <%= image_tag (service.product_images.first.image.url(:big)) %>
                        <div class="b-item-hover-action f-center mask">
                          <div class="b-item-hover-action__inner">
                            <div class="b-item-hover-action__inner-btn_group">
                              <a href="<%= line_items_path(:product_id => service.id) %>" class="b-btn f-btn b-btn-light f-btn-light info" data-method="post" data-remote="true"><i class="fa fa-shopping-cart"></i></a>
                              <a href="<%= service_path(service) %>" class="b-btn f-btn b-btn-light f-btn-light info"><i class="fa fa-link"></i></a>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="b-product-preview__content">
                        <div class="b-product-preview__content_col">
                          <span class="f-news-item__price f-primary-b b-left">
                            $<%= service.price %>
                          </span>
                        </div>
                        <div class="b-product-preview__content_col">
                          <a href="<%= service_path(service) %>" class="f-product-preview__content_title"><%= service.name %></a>

                          <div class="f-product-preview__content_category f-primary-b">
                            <a href="#"><%= service.category.name %></a>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
              <% end %>
              <div class="clearfix hidden-xs"></div>
            </div>
          </div>
        </div>
        <%= render 'shared/filter' ,product_type: 'service' %>
      </div>
    </div>
  </section>
</div>