<ol class="breadcrumb">
  <li>
    <%= link_to 'Products', products_path %>
  </li>
  <li class="active">Shopping Cart</li>
</ol>
<% if @cart.present? %>
      <div class="col-lg-12">
        <table class="table cart-table">
          <thead>
          <tr class="cart-menu">
            <th>Item</th>
            <th></th>
            <th>Price</th>
            <th>Quantity</th>
            <th class='text-center'>Total</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @cart.line_items.each do |line_item| %>
              <%= render 'shopping_carts/checkout_line_item', :line_item => line_item %>
          <% end %>
          </tbody>
        </table>
      </div>
    <div class="col-lg-12 clear">
      <div class="panel panel-default">
        <div class="panel-heading">
          What would you like to do next?
        </div>
        <div class="panel-body">
          <h3 class="text-center">
            Total cart amount <span class="cart-total-price"> <%= number_to_currency(@cart.total_price) %> </span>
          </h3>

          <div class="pull-right">
            <%= link_to 'Continue Shopping', products_path, :class => 'btn btn-primary' %>
            <%= link_to 'Place Order', new_order_path(), :class => 'btn btn-warning' %>
            <%= link_to 'Empty Cart', empty_cart_shopping_cart_path(@cart), :class => 'btn btn-danger', :data => {:confirm => 'Are you sure?'} %>
          </div>
        </div>
      </div>
    </div>

    <div class="clear"></div>

<% else %>
    <div class='alert alert-warning'>
      Empty Shopping Cart
    </div>
<% end %>

<script type="text/javascript">
    $(function () {
        $('.add-cart-item').click(function (e) {
            var line_item_id = $(this).attr('data-id');
            update_cart_item(line_item_id, 1);
        });

        $('.sub-cart-item').click(function (e) {
            var element = $(this);
            if (element.parent().find("#quantity").val() > 1) {
                update_cart_item(element.attr('data-id'), -1);
            }
        });
    });

    function update_cart_item(id, quantity) {
        $.ajax({
            url: '/line_items/' + id,
            type: 'put',
            dataType: 'script',
            data: {quantity: quantity, authenticity_token: "<%= form_authenticity_token %>"},
            error: function () {
                alert('Something went wrong');
            }
        });
    }

</script>
