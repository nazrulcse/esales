<div class="col-md-12 reset-padding">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="signin-form">
        <div class = "form-group col-md-12 reset-padding">
          <div class="col-md-12 reset-padding">
            <%= f.email_field :email, autofocus: true ,class: "form-control", placeholder: t(:email) %>
          </div>
        </div>

        <div class = "form-group col-md-12 reset-padding">
          <div class="col-md-12 reset-padding">
            <%= f.password_field :password, autocomplete: "off",class: "form-control", placeholder: t(:password) %>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </div>
        </div>
        <div class = "form-group col-md-12 reset-padding">
          <div class="col-md-3">
          </div>
          <div class="col-md-9">
            <%= f.submit t(:signin), class: 'btn btn-default  pull-right' %>
          </div>
        </div>

      </div>
      <div style="clear: both"></div>


  <% end %>
</div>
