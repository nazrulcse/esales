<% if user_signed_in? %>

    <%= image_tag current_user.image_url(:thumb) if current_user.image? %>
    <%= current_user.name %>

    <li>
      <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
    </li>
<% else %>
    <li>
      <%= link_to('Login', new_user_session_path)  %>
    </li>
<% end %>